# https://developer.hashicorp.com/consul/docs/agent/config/config-files
bootstrap = false
server = false
retry_join = {{ consul_servers | tojson }}

# TLS settings
tls {
    defaults {
        ca_file = "/etc/nomad.d/ssl/ca.pem"
        cert_file = "/etc/nomad.d/ssl/nomad-client.pem"
        key_file = "/etc/nomad.d/ssl/nomad-client-key.pem"
        verify_incoming = true
        verify_outgoing = true
    }
}